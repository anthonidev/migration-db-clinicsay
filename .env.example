# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
# Base de datos de desarrollo/staging (origen para migraciones)
DATABASE_URL=postgresql://user:password@localhost:5432/clinicsay?schema=public

# Base de datos de producción (destino para migrar clínica)
DATABASE_URL_PRD=postgresql://user:password@prod-host:5432/clinicsay?schema=public

# Path a documentación de dominio (opcional, para referencia)
PATH_DOCS=

# =============================================================================
# AWS COGNITO (para crear usuarios de migración)
# =============================================================================
COGNITO_USER_POOL_ID=
COGNITO_USER_POOL_CLIENT_ID=
COGNITO_ISSUER=
COGNITO_JWKS_URL=

# =============================================================================
# AWS S3 - ALMACENAMIENTO DE ARCHIVOS
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-3

# Proveedor de almacenamiento (aws-s3, minio, etc.)
OBJECT_STORAGE_PROVIDER=aws-s3

# Bucket para archivos generales (mutables): fotos de perfil, etc.
OBJECT_STORAGE_S3_BUCKET_GENERAL=

# Bucket WORM para archivos inmutables: consentimientos firmados, evidencias
OBJECT_STORAGE_S3_BUCKET_WORM=

# Endpoint personalizado (opcional, para MinIO o S3-compatible)
OBJECT_STORAGE_S3_ENDPOINT=

# Forzar path style (true para MinIO, false para AWS S3)
OBJECT_STORAGE_S3_FORCE_PATH_STYLE=false
